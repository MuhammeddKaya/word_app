{
  "expo": {
    "name": "Wordify",
    "slug": "word_app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/wordify1024tp.png",
    "scheme": "wordapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mkaya.word-app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/wordify1024tp.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.mkaya.word_app"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/wordify_splash.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "react-native-google-mobile-ads",
        {
          "androidAppId": "ca-app-pub-5216135862311450~7963221979",
          "iosAppId": "ca-app-pub-xxxxxxxxxxxxxxxx~xxxxxxxxxx"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "64a32375-e8ec-4cd6-9d29-13b828d9670d"
      }
    }
  }
}
